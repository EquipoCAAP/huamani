@model IEnumerable<sb_admin.web.Models.tarea>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tareas</h2>

<p>
     @Html.ActionLink("Nuevo Tarea", "Create", null, new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tarea1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prioridad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.caso.referencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.persona.dni)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tarea1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prioridad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.caso.referencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.persona.dni)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id },new { @class = "btn btn-warning btn-sm fa fa-pencil" })
            @Html.ActionLink("Details", "Details", new { id=item.id },new { @class = "btn btn-info btn-sm fa fa-eye" })
            @Html.ActionLink("Delete", "Delete", new { id=item.id },new { @class = "btn btn-danger btn-sm fa fa-trash-o" })
        </td>
    </tr>
}

</table>
