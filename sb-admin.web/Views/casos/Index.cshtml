@model sb_admin.web.Models.casoViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo Caso", "Create", null, new { @class = "btn btn-sm btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.casos.FirstOrDefault().referencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.casos.FirstOrDefault().fecha_creacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.casos.FirstOrDefault().responsableId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.casos.FirstOrDefault().aperturaPersonaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.casos.FirstOrDefault().avance.tipo_avance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.casos)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.referencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_creacion)
            </td>
            <td>
                @{
                    var persona = Model.personas.Where(c => c.id == item.responsableId).Select(c => new { c.NombreCompleto });
                }
                @persona.FirstOrDefault().NombreCompleto
            </td>
            <td>
                @{
                    var creador = Model.personas.Where(c => c.id == item.aperturaPersonaId).Select(c => new { c.NombreCompleto });
                }
                @creador.FirstOrDefault().NombreCompleto
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.avance.tipo_avance)
            </td>
            <td>
                @Html.ActionLink(" Editar", "Edit", new { id = item.id }, new { @class = "btn btn-warning btn-sm fa fa-pencil" }) |
                @Html.ActionLink(" Detalles", "Details", new { id = item.id }, new { @class = "btn btn-info btn-sm fa fa-eye" })|
                @Html.ActionLink(" Borrar", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm fa fa-trash-o" })
            </td>
        </tr>
    }

</table>
