<h4>Expedientes</h4>
@if (Model.Expedientes.Count() == 0)
{
    <h5>No tiene Expedientes registrados</h5>

}
else
{


    <table class="table ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Expedientes.FirstOrDefault().titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expedientes.FirstOrDefault().fechacreacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expedientes.FirstOrDefault().hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expedientes.FirstOrDefault().descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expedientes.FirstOrDefault().estadoExpediente.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expedientes.FirstOrDefault().caso.referencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expedientes.FirstOrDefault().ubicacion.ubicacion1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expedientes.FirstOrDefault().claseExpediente.Clase)
            </th>
            <th>
                Persona
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expedientes.FirstOrDefault().tipoExpediente.tipo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Expedientes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechacreacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estadoExpediente.estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.caso.referencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ubicacion.ubicacion1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.claseExpediente.Clase)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.persona.NombreCompleto)
                </td>


                <td>
                    @Html.ActionLink(" Editar", "EditExpediente", new { id = item.id }, new { @class = "btn btn-warning btn-sm fa fa-pencil" })
                    @Html.ActionLink(" Detalles", "DetailsExpediente", new { id = item.id }, new { @class = "btn btn-info btn-sm fa fa-eye" })
                    @Html.ActionLink(" Borrar", "DeleteExpediente", new { id = item.id }, new { @class = "btn btn-danger btn-sm fa fa-trash-o" })
                </td>
            </tr>
        }

    </table>
}
