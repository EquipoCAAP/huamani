@model sb_admin.web.Models.telefono_persona

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar teléfono</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Teléfono</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.telefono.id)
    @Html.HiddenFor(model => model.personaId)
    <div class="form-group">
        @Html.LabelFor(model => model.telefono.telefono1, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.telefono.telefono1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.telefono.telefono1, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.telefono.tipo_telefono, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.telefono.tipo_telefono, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.telefono.tipo_telefono, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Grabar" class="btn btn-primary btn-sm fa fa-backward" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar a cliente", "Details", new { id = Model.personaId }, new { @class = "btn btn-success btn-sm" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
